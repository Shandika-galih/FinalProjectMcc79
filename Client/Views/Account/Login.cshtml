@model Client.ViewModels.Account.LoginVM

@{
    Layout = "_LayoutLogin";
}
<h1 class="auth-title">Log in.</h1>
<p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p>
<div class="row">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group position-relative has-icon-left mb-4">
            <label asp-for="Email" class="control-label"></label>
            <div class="form-control-icon">
                <i class="bi bi-person"></i>
            </div>
            <input asp-for="Email" class="form-control form-control-xl" placeholder="Username" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            <label asp-for="Password" class="control-label"></label>
            <div class="form-control-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <input asp-for="Password" class="form-control form-control-xl" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            <input type="submit" value="Login" class="btn btn-primary btn-block btn-lg shadow-lg mt-5" />
        </div>
        <div class="text-center mt-5 text-lg fs-4">
            <p class="text-gray-600">
                Did you forget your password?
            </p>
            <p><a class="font-bold" href="/Account/ForgotPass">Forgot password?</a>.</p>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
