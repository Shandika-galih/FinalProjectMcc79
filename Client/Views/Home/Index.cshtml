@model IEnumerable<Client.ViewModels.LeaveType.LeaveTypeVM>

@{
    ViewData["Title"] = "Home Page";
    var fullname = User.Claims.FirstOrDefault(x => x.Type == "FullName")?.Value;
    var email = User.Claims.FirstOrDefault(x => x.Type == "Email")?.Value;
    ViewData["Title"] = "Index";
}


<div class="page-content">
    <section class="row">
        <div class="col-12 col-lg-12">
            <div class="row">
                <div class="col-6 col-lg-3 col-md-6">
                    <div class="card" style="width:400px">
                        <div class="card-body px-12 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
                                    <div class="ms-12 name">
                                        Welcome
                                        <h5 class="font-bold">@fullname</h5>
                                        <h10 class="font-bold">@email</h10>
                                    </div>
                                    
                                </div>
                            
                            </div>
                        </div>
                    </div>
                </div>
             </div>
             
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.LeaveName)</h5>
                                <p class="card-text">Days: @Html.DisplayFor(modelItem => item.LeaveDay)</p>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.LeaveDescription)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
           
    </section>
</div>
