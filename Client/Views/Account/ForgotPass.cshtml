@model Client.ViewModels.Account.ForgotPasswordVM

@{
    ViewData["Title"] = "ForgotPass";
    Layout = "_LayoutLogin";
}

<h1>Forgot Password</h1>

<hr />
<div class="row">
    <div>
        <form asp-action="ForgotPass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-xl" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary btn-block btn-lg shadow-lg mt-5" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Login">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
