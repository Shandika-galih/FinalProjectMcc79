@model Client.ViewModels.Account.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePass";
    Layout = "_LayoutLogin";
}
<h4>Change Password</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="ChangePass" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otp" class="control-label "></label>
                <input asp-for="Otp" class="form-control form-control-xl" />
                <span asp-validation-for="Otp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control form-control-xl" placeholder="Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-xl" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg shadow-lg mt-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
