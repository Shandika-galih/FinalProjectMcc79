@using Client.ViewModels.Employee;
@model Client.ViewModels.Employee.EmployeeVM

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutEmployee";
}
    
<h1>Edit</h1>

<h4>EmployeeVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div class="d-flex">
                    <div class="form-check me-4">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="Male" />
                        <label class="form-check-label" asp-for="Gender" value="Male">
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="Female" />
                        <label class="form-check-label" asp-for="Gender" value="Female">
                            Female
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EligibleLeave" class="control-label"></label>
                <input asp-for="EligibleLeave" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HiringDate" class="control-label"></label>
                <input asp-for="HiringDate" class="form-control" type="date" />
            </div>
            <div class="col-md-12">
                <label for="ManagerGuid" class="form-label">Manager</label>
                <select asp-for="ManagerGuid" class="form-select" id="validationCustom02">
                    <option value="">Null</option>
                    @{
                        var managers = ViewData["Managers"] as IEnumerable<ManagerVM> ?? Enumerable.Empty<ManagerVM>();
                        foreach (var item in managers)
                        {
                            if (item.Guid == Model.ManagerGuid)
                            {
                                <option selected value="@item.Guid">@item.NIK - @item.FullName</option>
                            }
                            else
                            {
                                <option value="@item.Guid">@item.NIK - @item.FullName</option>
                            }
                        }
                    }
                </select>
                <div class="invalid-feedback">
                    Please select a valid manager.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


