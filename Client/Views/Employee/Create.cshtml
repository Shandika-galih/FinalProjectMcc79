@using Client.ViewModels.Employee;
@model Client.ViewModels.Employee.AddEmployeeVM

@{
    Layout = "_LayoutEmployee";
}

<h1>Create</h1>

<h4>EmployeeVM</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form action="Create" method="post">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div class="d-flex">
                    <div class="form-check me-4">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="1"/>
                        <label class="form-check-label" asp-for="Gender" >
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="0"/>
                        <label class="form-check-label" asp-for="Gender">
                            Female
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EligibleLeave" class="control-label"></label>
                <input type="number" asp-for="EligibleLeave" class="form-control"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HiringDate" class="control-label"></label>
                <input asp-for="HiringDate" class="form-control" type="date"/>
                <span class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label for="ManagerGuid" class="form-label">Manager</label>
                <select asp-for="ManagerGuid" class="form-select" id="validationCustom02">
                    @{
                        foreach (var item in (IEnumerable<ManagerVM>)ViewData["Managers"])
                        {
                            <option value="@item.Guid">@item.NIK - @item.FullName</option>
                        }
                    }
                </select>
                <div class="invalid-feedback">
                    Please select a valid manager.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="text"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="text"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
        </form>
    </div>
</div>

